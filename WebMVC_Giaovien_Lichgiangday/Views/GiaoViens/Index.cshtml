@model IEnumerable<WebMVC_GiaoVien_LichGiangDay.Models.GiaoVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@(ViewData["CurrentFilter"] ?? "")" class="form-control" placeholder="Tìm theo tên..." />
        <span class="input-group-append">
            <button type="submit" class="btn btn-primary">Tìm</button>

            <a asp-action="Index" class="btn btn-secondary ml-2">Hiện tất cả</a>
        </span>
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaGV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoMon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaGV)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoMon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaGV">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaGV">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaGV">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
